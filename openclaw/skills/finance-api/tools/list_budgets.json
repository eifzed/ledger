{
  "name": "list_budgets",
  "description": "List all budget entries for a given month. Returns the raw budget limits (without usage calculations).",
  "parameters": {
    "type": "object",
    "properties": {
      "month": {
        "type": "string",
        "description": "Month in YYYY-MM format (e.g. '2026-02'). Required."
      }
    },
    "required": ["month"]
  },
  "backend": {
    "method": "GET",
    "url": "http://127.0.0.1:8000/v1/budgets",
    "headers": {
      "X-API-Key": "${FINANCE_API_KEY}"
    }
  }
}
